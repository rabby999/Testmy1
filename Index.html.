  <script>
    // Genesis countdown (example date: 2025-10-15T12:00:00Z)
    const genDate = new Date("2025-10-15T12:00:00Z").getTime();
    function updateGen(){
      const now = Date.now();
      let diff = genDate - now;
      if(diff <= 0){
        ['g-days','g-hours','g-mins','g-secs'].forEach(id=>document.getElementById(id).textContent='00');
        return;
      }
      const d = Math.floor(diff / (1000*60*60*24)); diff -= d*(1000*60*60*24);
      const h = Math.floor(diff / (1000*60*60)); diff -= h*(1000*60*60);
      const m = Math.floor(diff / (1000*60)); diff -= m*(1000*60);
      const s = Math.floor(diff / 1000);
      document.getElementById('g-days').textContent = String(d).padStart(2,'0');
      document.getElementById('g-hours').textContent = String(h).padStart(2,'0');
      document.getElementById('g-mins').textContent = String(m).padStart(2,'0');
      document.getElementById('g-secs').textContent = String(s).padStart(2,'0');
    }
    setInterval(updateGen,1000); updateGen();

    // Supermasks countdown (Monday 6th October 2025 13:00:00 UTC)
    const smDate = new Date("2025-10-06T13:00:00Z").getTime();
    function updateSM(){
      const now = Date.now();
      let diff = smDate - now;
      if(diff <= 0){
        ['s-days','s-hours','s-mins','s-secs'].forEach(id=>document.getElementById(id).textContent='00');
        return;
      }
      const d = Math.floor(diff / (1000*60*60*24)); diff -= d*(1000*60*60*24);
      const h = Math.floor(diff / (1000*60*60)); diff -= h*(1000*60*60);
      const m = Math.floor(diff / (1000*60)); diff -= m*(1000*60);
      const s = Math.floor(diff / 1000);
      document.getElementById('s-days').textContent = String(d).padStart(2,'0');
      document.getElementById('s-hours').textContent = String(h).padStart(2,'0');
      document.getElementById('s-mins').textContent = String(m).padStart(2,'0');
      document.getElementById('s-secs').textContent = String(s).padStart(2,'0');
    }
    setInterval(updateSM,1000); updateSM();
  </script>
